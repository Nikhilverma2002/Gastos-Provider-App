<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingTop="10dp"
    android:paddingEnd="20dp"
    android:background="@color/white"
    android:paddingBottom="20dp"
    >

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/plusjakartasansregular"
        android:gravity="start"
        android:text="@string/my_discounts"
        android:textColor="#212121"
        android:textFontWeight="700"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/plusjakartasansregular"
        android:gravity="start"
        android:text="@string/list_of_discounts_provided_to_customers"
        android:textColor="#909090"
        android:textFontWeight="500"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/head"
        app:layout_constraintTop_toBottomOf="@+id/head" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/plusjakartasansbold"
        android:gravity="start"
        android:text="@string/step"
        android:textColor="#909090"
        android:textFontWeight="700"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/head"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/head"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/_3_3"
        android:fontFamily="@font/plusjakartasansmedium"
        android:textColor="#909090"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />



    <TextView
        android:id="@+id/next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_sure"
        android:fontFamily="@font/plusjakartasansregular"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back" />

        <ScrollView
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:scrollbars="none"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_discount_card"
                android:backgroundTint="#60A5FA"
                android:paddingStart="15dp"
                android:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_layer_2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:layout_marginTop="15dp"
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_logo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:text="@string/gastos"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                        app:layout_constraintStart_toEndOf="@+id/imageView1"
                        app:layout_constraintTop_toTopOf="@+id/imageView1"
                        tools:ignore="RtlSymmetry" />


                    <TextView
                        android:id="@+id/percent1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:text="20%"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="64sp"
                        app:layout_constraintStart_toStartOf="@+id/imageView1"
                        app:layout_constraintTop_toBottomOf="@+id/imageView1"
                        tools:ignore="RtlSymmetry" />


                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:text="FLAT\nDISCOUNT"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/percent1"
                        app:layout_constraintStart_toEndOf="@+id/percent1"
                        app:layout_constraintTop_toTopOf="@+id/percent1"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:letterSpacing=".1"
                        android:text="@string/on_any_billed_amount"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/percent1"
                        app:layout_constraintTop_toBottomOf="@+id/percent1"
                        tools:ignore="RtlSymmetry" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_discount_card"
                android:backgroundTint="#FF9255"
                android:paddingStart="15dp"
                android:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/layer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_layer_2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_logo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:text="@string/gastos"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="@+id/imageView"
                        tools:ignore="RtlSymmetry" />


                    <TextView
                        android:id="@+id/percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:text="20%"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="64sp"
                        app:layout_constraintStart_toStartOf="@+id/imageView"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                        tools:ignore="RtlSymmetry" />


                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:text="FLAT\nDISCOUNT"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/percent"
                        app:layout_constraintStart_toEndOf="@+id/percent"
                        app:layout_constraintTop_toTopOf="@+id/percent"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:letterSpacing=".1"
                        android:text="at min amount of Rs 1,000"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/percent"
                        app:layout_constraintTop_toBottomOf="@+id/percent"
                        tools:ignore="RtlSymmetry" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_discount_card"
                android:backgroundTint="#E4C444"
                android:paddingStart="15dp"
                android:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/layer3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_layer_2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_logo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:text="@string/gastos"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="@+id/imageView2"
                        tools:ignore="RtlSymmetry" />


                    <TextView
                        android:id="@+id/percent3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:text="20%"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="64sp"
                        app:layout_constraintStart_toStartOf="@+id/imageView2"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2"
                        tools:ignore="RtlSymmetry" />


                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:text="FLAT\nDISCOUNT"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/percent3"
                        app:layout_constraintStart_toEndOf="@+id/percent3"
                        app:layout_constraintTop_toTopOf="@+id/percent3"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/plusjakartasansregular"
                        android:gravity="start"
                        android:letterSpacing=".1"
                        android:text="@string/on_any_billed_amount"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/percent3"
                        app:layout_constraintTop_toBottomOf="@+id/percent3"
                        tools:ignore="RtlSymmetry" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
            </LinearLayout>
        </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>